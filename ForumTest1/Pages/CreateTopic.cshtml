@page

@model ForumTest1.Pages.CreateTopicModel
@{
    ViewData["Title"] = "CreateTopic";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<h2>Создайте тему</h2>


<div asp-validation-summary="All"></div>
<form method="post">
    <div class="form-group">
        <label>Имя темы: </label>
        <input asp-for="topics.topicName" type="text" class="form-control" placeholder="Новая тема">
        <small>Название должно быть кратким и лаконичным!</small>
    </div>
    <div class="form-group">
        <label>Введите текст: </label><br />
        <textarea asp-for="topics.topicText" class="form-control" rows="10"></textarea>
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Создать</button>
    </div>
</form>
